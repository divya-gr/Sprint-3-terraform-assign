pipeline {
    agent any

    stages {
        stage('AWS_CONFIGURE') {
            steps {
               withCredentials([usernamePassword(credentialsId: 'ASIAZ3CUIHQKPRYO344V', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')])
                 }
            }
        }
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Terraform init') {
            steps {
                sh 'terraform init -reconfigure'
            }
        }
         stage('Terraform plan') {
            steps {
                sh 'terraform plan'
            }
        } 
        stage('Terraform apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
        
    }

